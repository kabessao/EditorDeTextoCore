<Window x:Class="EditorDeTextoXaml.Sobre"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EditorDeTextoXaml"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        Title="Sobre" SizeToContent="Height" Width="500">
    <Grid>
        <Image Source="imagens\imagem1.bmp"/>
        <StackPanel Margin="0 210 0 0 "
                    HorizontalAlignment="Center">
            <TextBlock Text="Feito por: Henrique Soares da Silva"
                   Foreground="White"
                   HorizontalAlignment="Center"
                   FontSize="10"/>
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center">
                <TextBlock Text="GitHub: "
                           Foreground="White"
                           FontSize="10"/>
                <Label Padding="-1"
                       Foreground="White"
                       FontSize="10"
                       x:Name="lblGit"
                       >
                    <TextBlock Text="github.com/kabessao"
                               TextDecorations="Underline"/>
                </Label>

            </StackPanel>

        </StackPanel>
    </Grid>
</Window>
